<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="com.imperial.fiksen.code-similarity.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="com.imperial.fiksen.code-similarity.commands.category"
            id="com.imperial.fiksen.code-similarity.commands.sampleCommand">
      </command>
      <command
            categoryId="com.imperial.fiksen.code-similarity.commands.category"
            id="com.imperial.fiksen.code-similarity.commands.astInfo"
            name="AST Info">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.imperial.fiksen.code-similarity.commands.sampleCommand"
            class="com.imperial.fiksen.codesimilarity.handlers.SampleHandler">
      </handler>
      <handler
            class="com.imperial.fiksen.codesimilarity.handlers.GetInfo"
            commandId="com.imperial.fiksen.code-similarity.commands.astInfo">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.imperial.fiksen.code-similarity.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="com.imperial.fiksen.code-similarity.commands.astInfo"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Other My Menu"
               mnemonic="M"
               id="com.imperial.fiksen.code-similarity.menus.otherMyMenu">
            <command
                  commandId="com.imperial.fiksen.code-similarity.commands.sampleCommand"
                  mnemonic="S"
                  id="com.imperial.fiksen.code-similarity.menus.sampleCommand">
            </command>
            <command
                  commandId="com.imperial.fiksen.code-similarity.commands.astInfo"
                  id="com.imperial.fiksen.code-similarity.menus.astInfo"
                  mnemonic="A">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.imperial.fiksen.code-similarity.toolbars.sampleToolbar">
            <command
                  commandId="com.imperial.fiksen.code-similarity.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="com.imperial.fiksen.code-similarity.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
